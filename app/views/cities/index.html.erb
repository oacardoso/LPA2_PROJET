<h1>Listing cities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lat</th>
      <th>Lon</th>
      <!--<th>Summary</th>-->
      <!--<th>Precipitation probability</th>-->
      <!--<th>Temperature</th>-->
      <!--<th>Pressure</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.lat %></td>
        <td><%= city.lon %></td>
        <td><%= link_to 'Show', city, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_city_path(city), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?'}, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New City', new_city_path, :class => "btn btn-success" %>